{
  "name": "@zimbra/zimlet-cli",
  "version": "14.2.0",
  "description": "Develop, Build, and Package Zimbra X compatible zimlets for development and production.",
  "main": "dist/index.js",
  "bin": {
    "zimlet": "./dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:shims && npm run build:src",
    "build:src": "babel src -d dist --copy-files",
    "build:shims": "node ./build-shims.js",
    "prebuild": "rimraf dist && mkdirp dist",
    "test": "npm run lint && npm run build",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepublishOnly": "npm run -s test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags",
    "prepare": "is-ci || husky install"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "add-module-exports",
      "@babel/plugin-syntax-dynamic-import",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/plugin-proposal-export-namespace-from",
      "@babel/plugin-proposal-export-default-from"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@apollo/client": "^3.5.10",
    "@babel/cli": "^7.17.6",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "dompurify": "^2.4.0",
    "eslint": "^7.32.0",
    "eslint-config-synacor": "^3.0.5",
    "graphql": "^15.8.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.3.5",
    "mkdirp": "^1.0.4",
    "mockery": "^2.1.0",
    "moment": "^2.29.1",
    "preact": "^10.6.6",
    "preact-context-provider": "^2.0.0-preactx.2",
    "preact-i18n": "^2.4.0-preactx",
    "preact-render-to-string": "^5.1.20",
    "preact-router": "github:zimbra/preact-router#3.1.1_base_path_support",
    "react-redux": "^7.2.6",
    "recompose": "^0.30.0",
    "redux-actions": "^2.6.5",
    "rimraf": "^3.0.2"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/plugin-proposal-export-default-from": "^7.16.7",
    "@babel/plugin-proposal-export-namespace-from": "^7.16.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-object-assign": "^7.16.7",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "@babel/runtime": "^7.17.2",
    "adm-zip": "^0.5.9",
    "babel-loader": "^8.2.3",
    "babel-plugin-add-module-exports": "^1.0.4",
    "bundle-loader": "^0.5.6",
    "chalk": "^4.1.2",
    "copy-webpack-plugin": "^6.4.1",
    "cors": "^2.8.5",
    "cross-spawn-promise": "^0.10.2",
    "css-loader": "^5.2.7",
    "file-loader": "^6.2.0",
    "get-port": "^5.1.1",
    "gittar": "^0.1.1",
    "inquirer": "^8.2.0",
    "ip": "^1.1.5",
    "less": "^3.13.1",
    "less-loader": "^7.3.0",
    "loader-utils": "^2.0.2",
    "log-symbols": "^4.1.0",
    "ora": "^5.4.1",
    "postcss": "^8.4.8",
    "postcss-discard-comments": "^5.1.1",
    "postcss-loader": "^4.3.0",
    "postcss-preset-env": "^7.4.2",
    "progress-bar-webpack-plugin": "^2.1.0",
    "raw-loader": "^4.0.2",
    "resolve-url-loader": "^3.1.4",
    "source-map-loader": "^1.1.3",
    "url-loader": "^4.1.1",
    "validate-npm-package-name": "^3.0.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.3",
    "which": "^2.0.2",
    "yargs": "^17.3.1"
  }
}
