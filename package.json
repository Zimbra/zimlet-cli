{
  "name": "@zimbra/zimlet-cli",
  "version": "6.0.0",
  "description": "Develop, Build, and Package Zimbra X compatible zimlets for development and production.",
  "main": "dist/index.js",
  "bin": {
    "zimlet": "./dist/cli.js"
  },
  "scripts": {
    "security:audit": "audit-ci --moderate --report-type important",
    "build": "npm run build:shims && npm run build:src",
    "build:src": "babel src -d dist --copy-files",
    "build:shims": "node ./build-shims.js",
    "prebuild": "rimraf dist && mkdirp dist",
    "test": "npm run lint && npm run build",
    "lint": "eslint src",
    "prepublishOnly": "npm run -s test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags",
    "release": "npm publish",
    "release-beta": "npm publish --tag beta"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "add-module-exports",
      "@babel/plugin-syntax-dynamic-import",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/plugin-proposal-export-namespace-from",
      "@babel/plugin-proposal-export-default-from"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "globals": {
      "zimlet": true
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "audit-ci": "^2.4.2",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-config-synacor": "^3.0.5",
    "mkdirp": "^0.5.1",
    "mockery": "^2.1.0",
    "preact": "^8.4.2",
    "preact-compat": "^3.18.5",
    "preact-redux": "^2.0.3",
    "preact-router": "^2.6.1",
    "react-apollo": "^2.5.5",
    "rimraf": "^3.0.0"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-proposal-export-default-from": "^7.7.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-object-assign": "^7.7.4",
    "@babel/plugin-transform-react-jsx": "^7.7.4",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@babel/runtime": "^7.7.4",
    "adm-zip": "^0.4.13",
    "babel-loader": "^8.0.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "bundle-loader": "^0.5.6",
    "chalk": "^3.0.0",
    "console-clear": "^1.1.1",
    "cors": "^2.8.5",
    "cross-spawn-promise": "^0.10.1",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "gittar": "^0.1.1",
    "inquirer": "^7.0.0",
    "ip": "^1.1.5",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "loader-utils": "^1.2.3",
    "log-symbols": "^3.0.0",
    "ora": "^4.0.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-discard-comments": "^4.0.2",
    "postcss-filter-gradient": "^1.0.0",
    "postcss-loader": "^3.0.0",
    "progress-bar-webpack-plugin": "^1.12.1",
    "raw-loader": "^2.0.0",
    "resolve-url-loader": "^3.1.0",
    "source-map-loader": "^0.2.4",
    "url-loader": "^1.1.2",
    "validate-npm-package-name": "^3.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "which": "^2.0.2",
    "yargs": "^15.0.2"
  }
}
