{
  "name": "@zimbra/zimlet-cli",
  "version": "1.2.0-beta.2",
  "description": "Develop, Build, and Package Zimbra X compatible zimlets for development and production.",
  "main": "dist/index.js",
  "bin": {
    "zimlet": "./dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:shims && npm run build:src",
    "build:src": "babel src -d dist -s --copy-files",
    "build:shims": "node ./build-shims.js",
    "prebuild": "rimraf dist && mkdirp dist",
    "test": "npm run lint && npm run build",
    "lint": "eslint src",
    "prepublishOnly": "npm run -s test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags",
    "release": "npm publish"
  },
  "babel": {
    "presets": [
      "env",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "globals": {
      "zimlet": true
    }
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "eslint": "^4.17.0",
    "eslint-config-synacor": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mockery": "^2.1.0",
    "preact": "^8.2.9",
    "preact-compat": "^3.18.0",
    "preact-redux": "^2.0.3",
    "preact-router": "^2.6.1",
    "react-apollo": "^2.1.9",
    "rimraf": "^2.6.2"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "adm-zip": "^0.4.7",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "bundle-loader": "^0.5.6",
    "chalk": "^2.3.2",
    "console-clear": "^1.0.0",
    "cors": "^2.8.4",
    "cross-spawn-promise": "^0.10.1",
    "css-loader": "^0.28.0",
    "file-loader": "^0.11.1",
    "gittar": "^0.1.0",
    "inquirer": "^5.1.0",
    "ip": "^1.1.5",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "loader-utils": "^1.1.0",
    "log-symbols": "^2.2.0",
    "ora": "^2.0.0",
    "postcss-cssnext": "2.9.0",
    "postcss-discard-comments": "^2.0.4",
    "postcss-filter-gradient": "^0.2.6",
    "postcss-loader": "^1.3.3",
    "progress-bar-webpack-plugin": "^1.9.3",
    "raw-loader": "^0.5.1",
    "resolve-url-loader": "^2.0.2",
    "source-map-loader": "^0.2.1",
    "url-loader": "^0.5.8",
    "validate-npm-package-name": "^3.0.0",
    "webpack": "^3.9.1",
    "webpack-dev-server": "^2.9.5",
    "which": "^1.3.0",
    "yargs": "^10.0.3"
  }
}
