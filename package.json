{
  "name": "@zimbra/zimlet-cli",
  "version": "8.3.0",
  "description": "Develop, Build, and Package Zimbra X compatible zimlets for development and production.",
  "main": "dist/index.js",
  "bin": {
    "zimlet": "./dist/cli.js"
  },
  "scripts": {
    "security:audit": "audit-ci --moderate --report-type important",
    "build": "npm run build:shims && npm run build:src",
    "build:src": "babel src -d dist --copy-files",
    "build:shims": "node ./build-shims.js",
    "prebuild": "rimraf dist && mkdirp dist",
    "test": "npm run lint && npm run build",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepublishOnly": "npm run -s test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags",
    "release": "npm publish",
    "release-beta": "npm publish --tag beta"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "add-module-exports",
      "@babel/plugin-syntax-dynamic-import",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/plugin-proposal-export-namespace-from",
      "@babel/plugin-proposal-export-default-from"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "indent": [
        2,
        "tab",
        {
          "SwitchCase": 1,
          "ignoredNodes": [
            "TemplateLiteral"
          ]
        }
      ]
    },
    "globals": {
      "zimlet": true
    }
  },
  "devDependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@babel/cli": "^7.8.4",
    "audit-ci": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.0.0",
    "eslint-config-synacor": "^3.0.5",
    "mkdirp": "^1.0.4",
    "mockery": "^2.1.0",
    "preact": "^10.4.1",
    "preact-context-provider": "^2.0.0-preactx.2",
    "preact-i18n": "^2.0.0-preactx.2",
    "preact-render-to-string": "^5.1.8",
    "preact-router": "github:zimbra/preact-router#3.1.0_base_path_support",
    "react-apollo": "^3.1.5",
    "react-redux": "^7.2.0",
    "recompose": "^0.30.0",
    "rimraf": "^3.0.2"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@babel/runtime": "^7.9.6",
    "adm-zip": "^0.4.14",
    "babel-loader": "^8.1.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "bundle-loader": "^0.5.6",
    "chalk": "^4.0.0",
    "console-clear": "^1.1.1",
    "cors": "^2.8.5",
    "cross-spawn-promise": "^0.10.2",
    "css-loader": "^2.1.1",
    "file-loader": "^6.0.0",
    "gittar": "^0.1.1",
    "inquirer": "^7.1.0",
    "ip": "^1.1.5",
    "less": "^3.11.1",
    "less-loader": "^6.1.0",
    "loader-utils": "^2.0.0",
    "log-symbols": "^4.0.0",
    "ora": "^4.0.4",
    "postcss-cssnext": "^3.1.0",
    "postcss-discard-comments": "^4.0.2",
    "postcss-filter-gradient": "^1.0.0",
    "postcss-loader": "^3.0.0",
    "progress-bar-webpack-plugin": "^2.1.0",
    "raw-loader": "^4.0.1",
    "resolve-url-loader": "^3.1.1",
    "source-map-loader": "^0.2.4",
    "url-loader": "^4.1.0",
    "validate-npm-package-name": "^3.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "which": "^2.0.2",
    "yargs": "^15.3.1"
  }
}
